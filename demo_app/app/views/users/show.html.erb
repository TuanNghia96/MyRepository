<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<table>
	<tr>
		<td>Stt</td>
		<td><b>Post</b></td>
		<td>Time</td>
	</tr>
	<% i = 1	 %>
	<% Post.all.each do |post| %>
		<% if post.user_id == @user.id %>
		<tr>
		<td><%= i %></td>
		<td><%= post.body%></td>
		<td><%= post.created_at%></td>

		</tr>
		<% i +=1 %>
		<% end %>
	<% end %>

</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
